<div class="container">
	<div class="card card-body">
		<h3>Edit Delivery</h3>
		<form action="/video/saveEditedVideo/{{video.id}}?_method=PUT" method="post">
		<input type="hidden" name="_method" value="PUT">
			<div class="form-group">
				<label class="font-italic" for="story">Name</label>{{!-- Practical 5 Exercise 2: Add a title input text here named 'title'--}}
				<textarea class="form-control" id="title" name="title" rows="1"></textarea>
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="story">Story</label>
				<textarea class="form-control" id="story" name="story" rows="7"></textarea>
			</div>

			<div class="form-group">
				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
						<label id="Date of Release" class="font-italic">Date of release</label>
						<input id="datepicker" width="200" name="dateRelease">
					</div>
					<div class="col-12 col-sm-12 col-md-12 col-lg-6">
						<label id="language" class="font-italic">Language</label>
						<br>
						{{!-- Practical 5 Exercise 2: Language radio buttons here'--}}
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="language" id="chinese" value="Chinese">
							<label class="form-check-label" for="chinese">Chinese</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="language" id="english" value="English">
							<label class="form-check-label" for="englishLang">English</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="language" id="malay" value="Malay">
							<label class="form-check-label" for="malay">Malay</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="language" id="tamil" value="Tamil">
							<label class="form-check-label" for="tamil">Tamil</label>
						</div>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label id="subtitles" class="font-italic">Subtitles</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="subtitles" id="chinese" value="Chinese">
							<label class="form-check-label" for="chinese">Chinese</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="subtitles" id="english" value="English">
							<label class="form-check-label" for="englishLang">English</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="subtitles" id="malay" value="Malay">
							<label class="form-check-label" for="malay">Malay</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" name="subtitles" id="tamil" value="Tamil">
							<label class="form-check-label" for="tamil">Tamil</label>
						</div>
						{{!--<div class="form-check form-check-inline">
							<div class="form-group">
								<input type="text" class="form-control form-control-sm" name="otherSub" id="otherSub" placeholder="Other">
							</div>
						</div>--}}
					</div>

					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label id="classification" class="font-italic">Classification</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="G" value="G" name="classification" >
							<label class="form-check-label" for="G">G</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="PG" value="PG" name="classification">
							<label class="form-check-label" for="PG">PG</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="PG13" value="PG13" name="classification">
							<label class="form-check-label" for="PG13">PG13</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="NC13" value="NC13" name="classification">
							<label class="form-check-label" for="NC13">NC13</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="M18" value="M18" name="classification">
							<label class="form-check-label" for="M18">M18</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="R21" value="R21" name="classification">
							<label class="form-check-label" for="R21">R21</label>
						</div>
					</div>
				</div>

			</div>
			<br>
			<button id="butAddVideo" type="submit" class="btn btn-primary">Save
			</button>
		</form>
	</div>
</div>

<script>
		$('#datepicker').datepicker({
			format: 'dd/mm/yyyy',
			uiLibrary: 'bootstrap4',
		});
</script>