<body>
    <h1>Shipping Address</h1>
</body>

<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/SAlogo1.png">
			<h3 class="text-center">Address</h3>
			<form action="/order/payment" method="post">
				<div class="form-group">
					<label for="name">First Name</label>
					<input type="text" class="form-control" name="fname" id="fname" required>
				</div>
				<div class="form-group">
					<label for="email">Last Name</label>
					<input type="text" name="lname" id="lname"class="form-control" value="" required>
				</div>
				<div class="form-group">
					<label for="password">Email</label>
					<input type="text"  name="email"id="email" class="form-control" value="" required>
				</div>
				<div class="form-group">
					<label for="password2">Address</label>
					<input type="text"  name="address"id="address" class="form-control" value="" required>
				</div>
                <div class="form-group">
					<label for="password2">Country</label>
					<input type="text"  name="country"id="country" class="form-control" value="" required>
				</div>
                <div class="form-group">
					<label for="password2">Postal Code</label>
					<input type="text"  name="postalcode"id="postalcode" class="form-control" value="" required>
				</div>
                <div class="form-group">
					<label for="password2">Phone Number</label>
					<input type="text"  name="phonenum" id="phonenum"class="form-control" value="" required>
				</div>
               
				<button type="submit" class="btn btn-primary">Submit</button>
                
			</form>
		</div>
	</div>
</div>


