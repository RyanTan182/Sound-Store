<div class="container">
	<div class="card card-body">
		<h3>Add Product</h3>
		<form action="/product/addProducts" method="post" id="addVideo">
			<div class="form-group">
				<label class="font-italic" for="description">Name</label>
				<textarea class="form-control" id="name" name="name" rows="1"></textarea>
			</div>
			<div class="form-group">
			<div>
				<br>
				<input type="file" id="posterUpload" name="posterUpload" accept="image/png,image/jpeg,image/jpg,image/gif">
				<div class="font-weight-bold text-danger small" id="posterErr"style="display:none">oh no</div>
				<br>
				<br>
			</div>
			<div>
				<label id="classification" class="font-italic">Quantity</label>
						<br>
				<textarea class="form-control" id="quantity" name="quantity" rows="1"></textarea>
			</div>
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="description">Description</label>
				<textarea class="form-control" id="description" name="description" rows="7"></textarea>
			</div>

			<div class="form-group">
				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
						<label id="Date of Release" class="font-italic">Release Date</label>
						<input id="datepicker" width="200" name="dateRelease">
					</div>
					<div class="col-12 col-sm-12 col-md-12 col-lg-6">
						<label id="language" class="font-italic">Type</label>
						<br>
						{{!-- Practical 5 Exercise 2: Language radio buttons here'--}}
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="language" id="chinese" value="Chinese" checked>
							<label class="form-check-label" for="chinese">Headphones</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="language" id="english" value="English">
							<label class="form-check-label" for="englishLang">Headset</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="language" id="malay" value="Malay">
							<label class="form-check-label" for="malay">Earbuds</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="language" id="tamil" value="Tamil">
							<label class="form-check-label" for="tamil">Earpiece</label>
						</div>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label id="brand" class="font-italic">Brand</label>
						<br>
						<select class="custom-select">
							<option selected>Choose a Brand</option>
							<option value="1">Sony</option>
							<option value="2">Beats by Dre</option>
							<option value="3">Sennheiser</option>
							<option value="4">Razer</option>
						</select>
					</div>

					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label id="classification" class="font-italic">Price</label>
						<br>
						<textarea class="form-control" id="price" name="price" rows="1" width="10px"></textarea>
					</div>
				</div>

			</div>
			<br>
			<button id="butAddVideo" type="submit" class="btn btn-primary">Save
			</button>
		</form>
	</div>
</div>

<script>
		$('#datepicker').datepicker({
			format: 'dd/mm/yyyy',
			value: new Date().toLocaleDateString('EN-SG'),
			uiLibrary: 'bootstrap4',
		});
</script>


