<div class="container">
{{#if users}}
	<div class="card card-body">
		<h3 class="text-warning">Users</h3>
		<input type="text" class="form-control mr-sm-2" id="myInput" onkeyup="myFunction()" placeholder="Search for products.." title="Type in a name">
		<br>
		{{#each users}}
			<div id="Product" class="card bg-dark border-info mb-2 w-100 mx-auto">
			<div id="productHeader" class="border-info">
				<div class="col-sm-12 col-md-12 col-lg-2">
							<p class="font-italic text-white">Email</p>
							<p class="text-info">{{email}}</p>
						</div>
						
				<div class="card-body">
					<div class="row">
						<div class="col-sm-12 col-md-12 col-lg-3">
							<p class="font-italic text-white">Name</p>
							<p class="text-info">
								{{name}}
							</p>
						</div>
						<div class="col-sm-12 col-md-12 col-lg-3">
							<p class="font-italic text-white">Password</p>
							<p class="text-info">
								********
							</p>
						</div>
						
						<div class="col-sm-12 col-md-12 col-lg-2">
							<p class="font-italic"></p>
							<a href="/product/edit/{{id}}" class="card-link text-success">
								<i class="fas fa-pencil-alt"></i>
								Edit
							</a>
							<a href="" class="card-link text-danger" data-toggle="confirmation"
							   data-title="Confirm delete?">
								<i class="far fa-trash-alt"></i>
								Delete
							</a>
						</div>
					</div>

				</div>

				
			</div>
		</div>
		{{/each}}
	</div>

</div>
{{else}}
	<h3>No users listed</h3>
{{/if}}