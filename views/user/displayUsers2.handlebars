<style>
#email{
	display:inline-block;
}
</style>

<div class="container">
{{#if users}}
	<div class="card card-body">
		<h3 class="text-warning">User</h3>
		<p>Managing Customers?<a href='/user/ListUsers'>Click here!</a></p>
		<a href="/showRegisterUser" class="nav-link">Register accounts here!</a>
		<br>
		{{#each users}}
			<div id="Product" class="card bg-dark border-info mb-2 w-100 mx-auto">
			<div id="productHeader" class="border-info">
				<div class="col-sm-12 col-md-12 col-lg-2">
							<p class="font-italic text-white">Email</p>
							<p class="text-info" id="email">{{email}}</p>
						</div>	
				<div class="card-body">
					<div class="row">
						<div class="col-sm-12 col-md-12 col-lg-3">
							<p class="font-italic text-white">Name</p>
							<p class="text-info">
								{{name}}
							</p>
						</div>
						<div class="col-sm-12 col-md-12 col-lg-3">
							<p class="font-italic text-white">Password</p>
							<p class="text-info">
								********
							</p>
						</div>
						<div class="col-sm-12 col-md-12 col-lg-3">
							<p class="font-italic text-white">User Type</p>
							<p class="text-info">
								{{UserType}}
							</p>
						</div>
						<div class="col-sm-12 col-md-12 col-lg-3">
							<p class="font-italic text-white">Contact Number</p>
							<p class="text-info">
								{{ContactNo}}
							</p>
						</div>
						<div class="col-sm-12 col-md-12 col-lg-3">
							<p class="font-italic text-white">Security Question</p>
							<p class="text-info">
								{{SecurityQn}}
							</p>
						</div>
						<div class="col-sm-12 col-md-12 col-lg-3">
							<p class="font-italic text-white">Security Answer</p>
							<p class="text-info">
								********
							</p>
						</div>
						<div class="col-sm-12 col-md-12 col-lg-2">
							<p class="font-italic"></p>
							<a href="/user/edit/{{id}}" class="card-link text-success">
								<i class="fas fa-pencil-alt"></i>
								Edit Information
							</a>
							
						</div>
					</div>

				</div>

				
			</div>
		</div>
		{{/each}}
	</div>

</div>
{{else}}
	<h3>No users listed</h3>
{{/if}}